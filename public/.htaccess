# ==============================================================================
# HOTLINKING PROTECTION
# ==============================================================================

<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
    RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|svg|ico|css|js|pdf)$ [NC]
    # Uncomment the line below to enable hotlinking protection
    # RewriteRule \.(jpg|jpeg|png|gif|webp|svg|ico|css|js|pdf)$ - [F,L]
</IfModule>

# ==============================================================================
# BLOCK MALICIOUS USER AGENTS & BOTS
# ==============================================================================

<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^(-|\.|') [OR]
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader|fetch) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (bot|crawl|slurp|spider|mediapartners|Googlebot|AdsBot|Bingbot|Yahoo|Yandex|Baiduspider|facebookexternalhit) [NC]
    # Uncomment the line below to block these user agents
    # RewriteRule .* - [F,L]
</IfModule>

# ==============================================================================
# RESTRICT HTTP METHODS
# ==============================================================================

<IfModule mod_rewrite.c>
    # Only allow GET, POST, HEAD, OPTIONS, PUT, DELETE, PATCH
    RewriteCond %{REQUEST_METHOD} !^(GET|POST|HEAD|OPTIONS|PUT|DELETE|PATCH)$ [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ==============================================================================
# BLOCK COMMON ATTACK PATTERNS
# ==============================================================================

<IfModule mod_rewrite.c>
    # Block SQL injection attempts
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|update|md5|benchmark|or|and).*(\(|%28).*(\)|%29) [NC,OR]
    RewriteCond %{QUERY_STRING} (\.\./|\.\.|\.\.%2F|\.\.%5C) [NC,OR]
    RewriteCond %{QUERY_STRING} (boot\.ini|etc/passwd|self/environ) [NC,OR]
    RewriteCond %{QUERY_STRING} (localhost|loopback|127\.0\.0\.1) [NC,OR]
    RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (<|%3C).*iframe.*(>|%3E) [NC]
    RewriteRule .* - [F,L]
    
    # Block XSS attempts in URI
    RewriteCond %{REQUEST_URI} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{REQUEST_URI} (<|%3C).*iframe.*(>|%3E) [NC,OR]
    RewriteCond %{REQUEST_URI} (<|%3C).*object.*(>|%3E) [NC,OR]
    RewriteCond %{REQUEST_URI} (<|%3C).*embed.*(>|%3E) [NC]
    RewriteRule .* - [F,L]
    
    # Block directory traversal attempts
    RewriteCond %{REQUEST_URI} (\.\./|\.\.|\.\.%2F|\.\.%5C|%2E%2E%2F|%2E%2E%5C) [NC]
    RewriteRule .* - [F,L]
    
    # Block null bytes
    RewriteCond %{QUERY_STRING} %00 [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ==============================================================================
# PROTECT BACKUP & TEMPORARY FILES
# ==============================================================================

<FilesMatch "\.(bak|backup|old|orig|save|swp|tmp|temp|log|sql|dump|~)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# ==============================================================================
# PROTECT HIDDEN FILES (Double Protection)
# ==============================================================================

<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# ==============================================================================
# ADDITIONAL STORAGE DIRECTORY PROTECTION
# ==============================================================================

<IfModule mod_rewrite.c>
    # Block direct access to storage directory
    RewriteCond %{REQUEST_URI} ^/storage/ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_FILENAME} !\.(jpg|jpeg|png|gif|webp|svg|ico|css|js|pdf|woff|woff2|ttf|eot)$ [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ==============================================================================
# FILE UPLOAD RESTRICTIONS (Additional Layer)
# ==============================================================================

# Limit file upload size (if mod_php is used)
# Note: This is a fallback - main limits should be in php.ini
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# ==============================================================================
# ETAG MANAGEMENT
# ==============================================================================

<IfModule mod_headers.c>
    # Remove ETags (better to use Cache-Control)
    Header unset ETag
</IfModule>

FileETag None

